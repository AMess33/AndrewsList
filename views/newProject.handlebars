<section class="row justify-content-center p-3">
    <div class="card border-info" style="width: 65%;">
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label>Give your Project a name</label>
                    <input type="text" class="form-control" placeholder="Jill's Kitchen Remodel">
                </div>
                <div class="form-group">
                    <label>Provide a short description of the work you need completed</label>
                    <input type="text" class="form-control" placeholder="Replace the kitchen countertops">
                </div>
                <div class="form-group">
                    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Flooring</label>
                    <select class="custom-select custom-select-lg mb-3">
                        <option value="0" selected>Choose</option>
                        {{#each products as |product| }}
                        <option value="{{product.id}}">{{product.id.name}}</option>
                        <!-- each loop for availble flooring products -->
                        {{/each}}

                    </select>
                </div>
                <div>
                    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Countertops</label>
                    <select class="custom-select custom-select-lg mb-3">
                        <option value="0" selected>Choose</option>
                        {{#each products as |product| }}
                        <option value="{{product.id}}">{{product.id.name}}</option>
                        <!-- each loop for availble countertops -->
                        {{/each}}
                    </select>
                </div>
                <div>
                    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Cabinets</label>
                    <select class="custom-select custom-select-lg mb-3">
                        <option value="0" selected>Choose</option>
                        {{#each products as |product| }}
                        <option value="{{product.id}}">{{product.id.name}}</option>
                        <!-- loop through availble cabinets -->
                        {{/each}}
                    </select>
                </div>
                <div>
                    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Requested Start Date</label>
                    <select class="custom-select custom-select-lg mb-3">
                        <option value="0" selected>Choose</option>
                    </select>
                </div>
                <div>
                    <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Expected Completion Date</label>
                    <select class="custom-select custom-select-lg mb-3">
                        <option value="0" selected>Choose</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit Project</button>

            </form>
        </div>
    </div>
</section>