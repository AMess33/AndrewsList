<div class="container">
    <div class="row">
        <div class="text-center my-4"> <a href="/projects" class="btn btn-warning">Start a New Project</a>
        </div>
        {{#if contractor}}
        <div class="col-4">
            {{#each projects as |project|}}
            <div class="card h-30 shadow-sm"> <img src="{{ product.filename }}" class="card-img-top " alt="...">
                <div class="card-body">
                    <h4 class="card-title text-center">{{ project.name }}</h4>
                    <h6 class="text-center">{{ project.description }}</h6>
                    <div class="text-center my-4"> <a href="#project" class="btn btn-warning">View Project</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
        <div class="col-8">
            {{#each projects as |project|}}
            <div class="card h-30 shadow-sm"> <img src="{{ product.filename }}" class="card-img-top " alt="...">
                <div class="card-body">
                    <h4 class="card-title text-center">{{ project.name }}</h4>
                    <h6 class="text-center">{{ product.description }}</h6>
                    <div class="text-center my-4"> <a href="#project" class="btn btn-warning">View Project</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>