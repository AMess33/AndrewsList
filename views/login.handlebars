<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-5 text-black">
                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                </div>
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form style="width: 23rem;">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>
                        <div class="form-outline mb-4">
                            <input type="email" id="email-login" class="form-control form-control-lg" />
                            <label class="form-label">Email address</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="password" id="password-login" class="form-control form-control-lg" />
                            <label class="form-label">Password</label>
                        </div>
                        <div class="pt-1 mb-4">
                            <button onclick="loginFormHandler()" class="btn btn-primary btn-lg btn-block"
                                type="button">Login</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class=" col-sm-5 card mx-4 mx-md-5 shadow-5-strong">
                <div class="card-body py-5 px-md-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-8">
                            <h2 class="fw-bold mb-5">Sign up now</h2>
                            <form>
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="text" id="first-name-signup" class="form-control" />
                                            <label class="form-label">First name</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4">
                                        <div class="form-outline">
                                            <input type="text" id="last-name-signup" class="form-control" />
                                            <label class="form-label">Last name</label>
                                        </div>
                                    </div>
                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="email" id="email-singup" class="form-control" />
                                    <label class="form-label">Email address</label>
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <input type="password" id="password-singup" class="form-control" />
                                    <label class="form-label">Password</label>
                                </div>
                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-center mb-4">
                                    <input class="form-check-input me-2" value="true" type="checkbox"
                                        onclick="isContractor()" id="contractorCheck" unchecked />
                                    <label class="form-check-label">
                                        Are you a Contractor?
                                    </label>
                                </div>
                                <!-- if checkbox is checked display two more input fields -->
                                {{!-- <div class="form-outline mb-4" style="display: none;" id="company">
                                    <input type="text" id="business" class="form-control" />
                                    <label class="form-label">What is the name of your Buisness?</label>
                                </div>

                                <div class="form-outline mb-4" style="display: none;" id="phone">
                                    <input type="text" id="phone" class="form-control" />
                                    <label class="form-label">Business Phone Number?</label>
                                </div> --}}
                                <!-- Submit button -->
                                <button onclick="signupFormHandler()" type="button"
                                    class="btn btn-primary btn-block mb-4">
                                    Sign up
                                </button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</section>

<script src="./js/login.js"></script>